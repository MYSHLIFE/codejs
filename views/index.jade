extends layout
block title
  title #{title}
block content
  .container(ng-app="app")
    //- .search_wrapper.absolute_position2
    //-   ul.nav.navbar-nav
    //-     li
    //-       input#index_search.form-control(type="search",placeholder="Search")

    .row(style="min-height:500px",ng-controller="PhoneListCtrl")
      .col-sm-8
        ul.nav.nav-sidebar(style="margin-top:30px",ng-init="ddd=[1,2,34,4]")
          li.index_li.col-md-4(placement="top",ng-repeat="phone in phones",data-toggle="popover",data-original-title="架构师",data-content="架构师必备书籍")
            .img
              img.img(src="{{phone.img}}") 
            a(href="{{phone.href}}",target="_blank") {{phone.name}}
        nav.text-center
          ul.pagination
            li
              a(href="#",ng-init="page=0",ng-click="next_page()") &laquo;
              a(href="#",ng-init="page1=1",ng-click="next_page()") {{page}}
              a(href="#",ng-init="page2=2",ng-click="next_page()") {{page}}
              a(href="#",ng-init="page3=3",ng-click="next_page()") {{page}}
              a(href="#",ng-init="page4=4",ng-click="next_page()") {{page}}
              a(href="#",ng-init="page5=5",ng-click="next_page()") &raquo;

      .col-sm-4


block page_script
  script(src='/pagejs/app_index.js', type='text/javascript')
